{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}



{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="flex min-h-full h-screen flex-col bg-white  justify-center px-6 py-12 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <img class="mx-auto h-10 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"
                 alt="Your Company">
            <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-hoveredtext">Connexion</h2>
        </div>
        <div class="flex mx-auto  mb-2 mt-2">
            <div
                    class="mr-2 text-hoveredtext">
                <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        class="inline-block h-6 w-6">
                    <path class="fill-hovertext"
                          d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z"/>
                </svg>
            </div>
            <button :data-theme="isDark ? 'dark' : 'light'" id="theme-switcher"
                    x-data="{isDark : localStorage.theme === 'dark'}"
                    @click="isDark =! isDark" type="button"
                    :class="isDark ? ' bg-ring' : ' bg-light'"
                    class=" relative mx-2.5 inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-warn focus:ring-offset-2"
                    role="switch" aria-checked="false">
                <span class="sr-only">Use setting</span>
                <!-- Enabled: "translate-x-5", Not Enabled: "translate-x-0" -->
                <span aria-hidden="true" :class="isDark ? 'translate-x-5 ' : 'translate-x-0 '"
                      class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"></span>
            </button>
            <div class="ml-2 text-hoveredtext">
                <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"

                        class="inline-block h-6 w-6">
                    <path
                            class="fill-hovertext"
                            fill-rule="evenodd"
                            d="M9.528 1.718a.75.75 0 01.162.819A8.97 8.97 0 009 6a9 9 0 009 9 8.97 8.97 0 003.463-.69.75.75 0 01.981.98 10.503 10.503 0 01-9.694 6.46c-5.799 0-10.5-4.701-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 01.818.162z"
                            clip-rule="evenodd"/>
                </svg>
            </div>
        </div>
        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">

            {#            //this part is Only for presentation version it will be delete in real condition #}
            <form class="space-y-6" action="{{ path('app_login') }}" method="post" id="login_guest">
                <input id="username" name="_username" type="email" autocomplete="username" value="guest@gmail.com"
                       class="hidden">

                <input id="password" name="_password" type="password" autocomplete="current-password" value="azerty1234"
                       class="hidden">
            </form>
            <form class="space-y-6" action="{{ path('app_login') }}" method="post" id="login_user">
                <input id="username" name="_username" type="email" autocomplete="username" value="useradmin23@gmail.com"
                       class="hidden">

                <input id="password" name="_password" type="password" autocomplete="current-password" value="azerty1234"
                       class="hidden">
            </form>
            {#            ------------------------------------------------------------------- -#}

            <form class="space-y-6" action="{{ path('app_login') }}" method="post">
                <div>
                    <label for="username" class="block text-sm font-medium leading-6 text-hoveredtext">Email
                        address</label>
                    <div class="mt-2">
                        <input id="username" name="_username" type="email" autocomplete="username" required
                               class="input-crud-form">
                    </div>
                </div>

                <div>
                    <div class="flex items-center justify-between">
                        <label for="password"
                               class="block text-sm font-medium leading-6 text-hoveredtext">Password</label>
                    </div>
                    <div class="mt-2">
                        <input id="password" name="_password" type="password" autocomplete="current-password" required
                               class="input-crud-form">
                    </div>
                </div>
                <div>
                    <button type="submit"
                            class="primary-button update-button w-full">
                        Login
                    </button>

                    {#            //this part is Only for presentation version it will be delete in real condition #}
                    <div>
                        <p class="block text-sm font-medium leading-6 text-hoveredtext mt-4">accées sans droit de modification</p>
                        <button type="submit"
                                class="primary-button update-button w-full mt-1"
                                form="login_guest">
                            Login guest
                        </button>
                    </div>
                    <div>
                        <p class="block text-sm font-medium leading-6 text-hoveredtext mt-4">accées avec droit de modification sauf user Management</p>
                        <button type="submit"
                                class="primary-button update-button w-full mt-1"
                                form="login_user">
                            Login admin
                        </button>
                    </div>
                    {#            ------------------------------------------------------------------- -#}

                </div>
            </form>

        </div>
    </div>
{% endblock %}
