<nav class="flex px-4" aria-label="Breadcrumb">
    <ol role="list" class="flex space-x-4 rounded-md bg-light px-6 shadow">

        {% for  breadcrumb in breadcrumbs %}
            {% if  breadcrumbs|length == 1 %}
            <li class="flex">
                <div class="flex items-center ">
                    <a  class="text-gray-400 ">
                        <svg class="h-5 w-5 flex-shrink-0 " viewBox="0 0 20 20"
                             aria-hidden="true">
                            <path class="fill-hovertext"
                                    fill-rule="evenodd"
                                  d="M9.293 2.293a1 1 0 011.414 0l7 7A1 1 0 0117 11h-1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-3a1 1 0 00-1-1H9a1 1 0 00-1 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-6H3a1 1 0 01-.707-1.707l7-7z"
                                  clip-rule="evenodd"/>
                        </svg>

                        <span class="sr-only">{breadcrumb.data.name}</span>
                    </a>
                    <span class="ml-4 mr-4 text-sm font-medium text-hovertext ">{{ breadcrumb.data.name }}</span>
                    <svg class="h-full w-6 flex-shrink-0 text-gray-200" viewBox="0 0 24 44"
                         preserveAspectRatio="none"  aria-hidden="true">
                        <path class="fill-hovertext" d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z"/>
                    </svg>
                </div>
            </li>
        {% else %}
            {% if  loop.first %}
                <li class="flex">
                    <div class="flex items-center">
                        <a href="{{ path(breadcrumb.route) }}" class=" flex items-center">

                            <svg class="h-5 w-5 flex-shrink-0 text-hoveredtext" viewBox="0 0 20 20"
                                 aria-hidden="true">
                                <path class="fill-hovertext"
                                        fill-rule="evenodd"
                                      d="M9.293 2.293a1 1 0 011.414 0l7 7A1 1 0 0117 11h-1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-3a1 1 0 00-1-1H9a1 1 0 00-1 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-6H3a1 1 0 01-.707-1.707l7-7z"
                                      clip-rule="evenodd"/>
                            </svg>
                            <span class="sr-only">{breadcrumb.data.name}</span>
                            <span class="ml-4 text-sm font-medium text-hoveredtext hovered hover:text-warn">{{ breadcrumb.data.name }}</span>

                        </a>

                    </div>
                </li>
            {% else %}

                    <li class="flex">
                    <div class="flex items-center">
                    <svg class="h-full w-6 flex-shrink-0 text-gray-200" viewBox="0 0 24 44"
                         preserveAspectRatio="none"  aria-hidden="true">
                        <path class="fill-hovertext" d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z"/>
                    </svg>
                    {% if  breadcrumb.route is defined %}
                        {% if  breadcrumb.param is defined %}
                    <a href="{{ path(breadcrumb.route ,  breadcrumb.param)}}"
                        {% else %}
                    <a href="{{ path(breadcrumb.route )}}"
                        {% endif %}
                       class="ml-4 text-sm font-medium text-symplytext hovered hover:text-warn">{{ breadcrumb.data.name }}</a>
                    {% else %}
                    <span class="ml-4 text-sm font-medium text-symplytext hovered ">{{ breadcrumb.data.name }}</span>
                    {% endif %}
                    </div>
                    </li>

            {% endif %}
            {% endif %}

        {% endfor %}
    </ol>
</nav>

