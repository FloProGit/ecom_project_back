{% extends 'base_layout.html.twig' %}



{% block content %}


    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg my-4 mx-4">
        <table class="min-w-full divide-y  divide-gray-300">
            <thead class="bg-gray-50">
            <tr>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 sm:pl-6">Image</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Code</th>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 ">Name</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Parent</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white  ">
            {% for category in categories %}
                <tr class="{% if  loop.index%2 %} bg-gray-300 {% endif %}">

                    <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500 sm:pl-6 ">
                        <img  width="64" src="https://www.peintremik-art.com/wp-content/uploads/2019/02/Diapositive1134.jpg" class=" rounded-lg">
                    </td>
                    <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">{{ category.getCode() }}</td>
                    <td class="whitespace-nowrap py-4 pl-4  pr-3 text-sm font-medium text-blue-600 sm:pl-6"><a href="{{ path('category_edit', {id:  category.id})  }}">{{ category.getName() }}</a></td>

                    <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">{{ category.getParent() }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}