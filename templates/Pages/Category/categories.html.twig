{% extends 'base_layout.html.twig' %}
{% set title_page = 'category' %}


{% block content %}
    <div class="flex">
        {% if  breadcrumbs is defined %}
            {% include 'Components/breadcrumb.html.twig' with {'breadcrumbs':breadcrumbs} %}
        {% endif %}
        <a href="{{ path('categories_create') }}"
           class="primary-button create-button">
            {% trans from 'button' %}create {% endtrans %} {% trans from 'linkword' %}a_f{% endtrans %} {{ title_page|trans({},'general')|lower}} </a>
    </div>


    <div class="overflow-hidden section-border my-4 mx-4">
        <table class="min-w-full ">
            <thead class="bg-gray-50">
            <tr>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-hoveredtext sm:pl-6">Image</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-hoveredtext">Code</th>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-hoveredtext ">Name</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-hoveredtext">Parent</th>
            </tr>
            </thead>
            <tbody class=" bg-white  ">
            {% for category in categories %}
                <tr class="{% if  loop.index%2 %} bg-light {% endif %}">

                    <td class="whitespace-nowrap py-4 px-3 text-sm text-symplytext sm:pl-6 ">
                        <img  width="64" src="https://www.peintremik-art.com/wp-content/uploads/2019/02/Diapositive1134.jpg" class=" rounded-lg">
                    </td>
                    <td class="whitespace-nowrap py-4 px-3 text-sm text-symplytext">{{ category.getCode() }}</td>
                    <td class="whitespace-nowrap py-4 pl-4  pr-3 text-sm font-medium  sm:pl-6"><a class="linked-text" href="{{ path('category_edit', {id:  category.id})  }}">{{ category.getName() }}</a></td>

                    <td class="whitespace-nowrap py-4 px-3 text-sm text-symplytext">{{ category.getParent() }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
