{% extends 'base_layout.html.twig' %}
{% set title_page = 'product'  %}
{% set description_page = 'liste de produit' %}

{% block content %}
    <div class="flex">
        {% if  breadcrumbs is defined %}
            {% include 'Components/breadcrumb.html.twig' with {'breadcrumbs':breadcrumbs} %}
        {% endif %}
        <a href="{{ path('product_create') }}"
           class="primary-button create-button">
            {% trans from 'button' %}create {% endtrans %} {% trans from 'linkword' %}a_m{% endtrans %} {{ title_page|trans({},'general')|lower}} </a>
    </div>

    <div class="overflow-hidden section-border mt-4 mx-4">
    <table class="min-w-full ">
        <thead class="bg-gray-50">
        <tr>
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-hoveredtext sm:pl-6">Status</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-hoveredtext"></th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-hoveredtext">Name</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-hoveredtext">Brand</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-hoveredtext">Ext_ref</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-hoveredtext">Stock</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-hoveredtext">Condition</th>
        </tr>
        </thead>
        <tbody class=" bg-white  ">
        {% for product in products %}
            <tr class="{% if  loop.index%2 %} bg-light {% endif %}">

                <td class="whitespace-nowrap py-4 pl-4  pr-3 text-sm font-medium text-hoveredtext sm:pl-6">Publish</td>
                <td class="whitespace-nowrap py-4 px-3 text-sm text-symplytext ">
                    <img  width="64" src="{{ asset('/download/images/'~ product.url_link) }}" class=" rounded-lg" alt="image d'un produit">
                </td>
                <td class="whitespace-nowrap py-4 px-3 text-sm "><a class="linked-text" href="{{ path('product_edit', {id:  product.id})  }}">{{ product.name }}</a></td>

                <td class="whitespace-nowrap py-4 px-3 text-sm text-symplytext">{{ product.ext_id }}</td>
                <td class="whitespace-nowrap py-4 px-3 text-sm text-symplytext">{{ product.ext_reference }}</td>
                <td class="whitespace-nowrap py-4 px-3 text-sm text-symplytext">{{ product.quantity }}</td>
                <td class="whitespace-nowrap py-4 px-3 text-sm text-symplytext">{{ product.current_condition }}</td>


            </tr>
        {% endfor %}
        </tbody>
    </table>
{#        {% include 'pagination.html.twig' %}#}
    </div>
{% endblock %}
