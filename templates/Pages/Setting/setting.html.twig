{% extends 'base_layout.html.twig' %}
{% set title_page = 'setting' %}
{% set description_page = 'categories des produits' %}




{% block content %}
    {% if  breadcrumbs is defined %}
        {% include 'Components/breadcrumb.html.twig' with {'breadcrumbs':breadcrumbs} %}
    {% endif %}
    {{ form_start(setting_form) }}
    <div class="space-y-8  px-4 py-4  rounded-lg ">
        <div id="information">
            <div class="section-border">
                <div class="flex-col bg-white rounded-md space-y-4 px-4 py-4">
                    <header>
                        <h3 class="label-crud-block">Settings</h3>
                    </header>
                    <div class="w-full">
                        {{ form_label(setting_form.language,'langage',{'label_attr': {'class': 'label-crud-form'}}) }}
                        {{ form_widget(setting_form.language,{'attr': {'class': 'input-crud-form'}}) }}
                        <div class="text-red-700 mt-1">
                            {{ form_errors(setting_form.language) }}
                        </div>

                    </div>


                </div>

            </div>
        </div>
        <footer class="fixed bottom-0 w-full left-0 right-0 z-40 h-[8rem] p-6 border-t border-light lg:left-auto bg-white/70 lg:w-[calc(100vw_-_17rem)]">
            <div class="pt-5">
                <div class="flex justify-end">

                    <div class="flex justify-end">
                        {{ form_widget(setting_form.submit,{'attr':{'class':'primary-button update-button'  }}) }}
                    </div>
                </div>

            </div>
        </footer>
    </div>
    {{ form_end(setting_form) }}
{% endblock %}


