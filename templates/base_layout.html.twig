                    </div>
                    <nav x-data="{currentState : 'empty'}" class="flex-1 space-y-1 bg-white px-2" aria-label="Sidebar">
                        <div>
                            <a href="{{ path('dashboard') }}"
                               class="bg-gray-100 text-hoveredtext group flex w-full items-center rounded-md py-2 pl-7 pr-2 text-sm font-medium hover:bg-light hover:text-warn">Dashboard</a>
                        </div>
                        <div class="space-y-1">
                            <button @Click="currentState = currentState == 'team'?'':'team'" type="button"
                                    class="bg-white text-hoveredtext hovered hover:bg-gray-50 hovered hover:text-warn group flex w-full items-center rounded-md py-2 pr-2 text-left text-sm font-medium focus:outline-none focus:ring-2 focus:ring-indigo-500"
                                    aria-controls="sub-menu-1" aria-expanded="false">
                                <!-- Expanded: "rotate-90 text-gray-400", Collapsed: "text-gray-300" -->
                                <span>

                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                     :class="{'rotate-90': currentState == 'team'}" class="w-6 h-6 transition ease-in">
                                    <path   class="stroke-hovertext" stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
                                </svg>
