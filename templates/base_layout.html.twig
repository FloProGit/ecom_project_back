                                <a href="{{ path('products_list') }}"
                                   class="group flex w-full items-center rounded-md py-2 pl-10 pr-2 text-sm  font-medium text-hoveredtext  hover:bg-light hover:text-warn">
                                    Products</a>
                                <a href="{{ path('categories_list') }}"
                                   class="group flex w-full items-center rounded-md py-2 pl-10 pr-2 text-sm font-medium text-hoveredtext  hover:bg-light hover:text-warn">
                                    Categories</a>
                                <a href="{{ path('manufacter_list') }}"
                                   class="group flex w-full items-center rounded-md py-2 pl-10 pr-2 text-sm font-medium text-hoveredtext hover:bg-light hover:text-warn">
                                    Manufacters</a>
                                <a href="{{ path('condition_product_list') }}"
                                   class="group flex w-full items-center rounded-md py-2 pl-10 pr-2 text-sm font-medium text-hoveredtext  hover:bg-light hover:text-warn">
                                    Conditions</a>
                                <a href="{{ path('user_list') }}"
                                   class="group flex w-full items-center rounded-md py-2 pl-10 pr-2 text-sm font-medium text-hoveredtext  hover:bg-light hover:text-warn">
                                    User management</a>
                            </div>
                        </div>
                    </nav>
                </div>
                <div class="flex mx-auto  mb-2">
                    <div
                            class="mr-2 text-hoveredtext">
                        <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                class="inline-block h-6 w-6">
                            <path class="fill-hovertext"
